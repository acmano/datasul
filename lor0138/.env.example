# ========================================
# SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development
API_PREFIX=/api

# ========================================
# BANCO DE DADOS - SQL SERVER
# ========================================
DB_CONNECTION_TYPE=sqlserver
DB_SERVER=10.105.0.55
DB_PORT=1433
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME_EMP=emp
DB_NAME_MULT=mult
DB_ENCRYPT=false
DB_TRUST_CERTIFICATE=true

# Timeouts do Banco (aceita: "30s", "5000ms", ou "5000")
DB_CONNECTION_TIMEOUT=15s
DB_REQUEST_TIMEOUT=30s

# ========================================
# BANCO DE DADOS - ODBC (Alternativo)
# ========================================
ODBC_DSN_EMP=DSN_EMP
ODBC_DSN_MULT=DSN_MULT
ODBC_CONNECTION_TIMEOUT=15s

# ========================================
# MOCK DATA (Desenvolvimento)
# ========================================
USE_MOCK_DATA=false

# ========================================
# CORS
# ========================================
# Separe múltiplas origens com vírgula
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://10.105.0.0/24

# ========================================
# TIMEOUTS HTTP
# ========================================
# Timeout padrão para todas as requisições
HTTP_REQUEST_TIMEOUT=30s

# Timeout para operações pesadas (queries complexas, relatórios)
HTTP_HEAVY_TIMEOUT=60s

# Timeout para health check (deve ser rápido)
HTTP_HEALTH_TIMEOUT=5s