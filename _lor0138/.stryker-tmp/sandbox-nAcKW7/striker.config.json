{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Configuração do Stryker Mutator para Mutation Testing - Projeto LOR0138",
  "packageManager": "npm",
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.ts",
    "enableFindRelatedTests": true
  },
  "checkers": [
    "typescript"
  ],
  "tsconfigFile": "tsconfig.json",
  "mutate": [
    "src/api/lor0138/item/dadosCadastrais/informacoesGerais/**/*.ts",
    "src/shared/utils/**/*.ts",
    "src/shared/middlewares/**/*.ts",
    "!src/**/*.types.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.mock.ts"
  ],
  "mutator": {
    "plugins": [
      "typescript"
    ]
  },
  "reporters": [
    "progress",
    "clear-text",
    "html",
    "json",
    "dashboard"
  ],
  "htmlReporter": {
    "fileName": "mutation-report.html",
    "baseDir": "reports/mutation"
  },
  "jsonReporter": {
    "fileName": "mutation-report.json"
  },
  "dashboard": {
    "project": "github.com/seu-usuario/lor0138",
    "version": "main",
    "module": "lor0138-api",
    "reportType": "full"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 60
  },
  "coverageAnalysis": "perTest",
  "timeoutMS": 60000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 4,
  "concurrency": 4,
  "commandRunner": {
    "command": "npm test"
  },
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "allowConsoleColors": true,
  "logLevel": "info",
  "fileLogLevel": "info",
  "symlinkNodeModules": true,
  "disableTypeChecks": false,
  "ignoredMutations": [],
  "plugins": [
    "@stryker-mutator/typescript-checker",
    "@stryker-mutator/jest-runner"
  ],
  "appendPlugins": [
    "@stryker-mutator/html-reporter"
  ]
}