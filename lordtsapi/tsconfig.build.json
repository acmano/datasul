{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Output directory para build de produção
    "outDir": "./dist",

    // Source maps para produção (pode ser desabilitado se não necessário)
    "sourceMap": true,

    // Declarações de tipo para bibliotecas
    "declaration": true,
    "declarationMap": true,

    // Remover comentários no build de produção
    "removeComments": true,

    // Otimizações
    "importHelpers": true,

    // Desabilitar strict mode temporariamente para build durante refactoring
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/api/**",
    "src/application/**",
    "src/infrastructure/chaos/**",
    "src/infrastructure/database/circuitBreaker/**",
    "src/infrastructure/database/connections/**",
    "src/infrastructure/database/databaseConfig.ts",
    "src/infrastructure/repositories/*Adapter.ts",
    "src/infrastructure/monitoring/sentry.ts",
    "src/item/dadosCadastrais/**",
    "src/shared/chaos/**",
    "src/shared/decorators/**"
  ]
}
