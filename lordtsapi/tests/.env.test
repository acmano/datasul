# ============================================
# AMBIENTE DE TESTE
# ============================================
NODE_ENV=test
PORT=3001

# ============================================
# BANCO DE DADOS - MESMA PRODUÇÃO (SOMENTE LEITURA)
# ============================================
DB_CONNECTION_TYPE=sqlserver
DB_SERVER=10.105.0.4\LOREN
DB_PORT=1433
DB_USER=sysprogress
DB_PASSWORD='sysprogress'

# Database vazio = usa database padrão
DB_DATABASE_EMP=
DB_DATABASE_MULT=

# Timeouts mais agressivos para testes
DB_CONNECTION_TIMEOUT=10000
DB_REQUEST_TIMEOUT=15000

DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# ============================================
# CACHE DESABILITADO PARA TESTES
# ============================================
CACHE_ENABLED=false
CACHE_STRATEGY=memory

# ============================================
# CORS
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3001

# ============================================
# TIMEOUTS HTTP
# ============================================
HTTP_REQUEST_TIMEOUT=10s
HTTP_HEALTH_TIMEOUT=3s

# ============================================
# LOGS - SILENCIOSOS EM TESTE
# ============================================
LOG_LEVEL=error

# ============================================
# GRACEFUL SHUTDOWN
# ============================================
SHUTDOWN_TIMEOUT=2000

# ============================================
# RETRY LOGIC - MENOS TENTATIVAS
# ============================================
DB_RETRY_MAX_ATTEMPTS=2
DB_RETRY_INITIAL_DELAY=500
DB_RETRY_MAX_DELAY=2000
DB_RETRY_BACKOFF_FACTOR=2