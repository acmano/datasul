{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Output directory para desenvolvimento
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/__tests__/**",
    "src/api/**",
    "src/application/**",
    "src/core/**",
    "src/domain/**",
    "src/presentation/**",
    "src/infrastructure/database/DatabaseAdapter.ts",
    "src/infrastructure/database/QueryBuilder.ts",
    "src/infrastructure/logging/**",
    "src/infrastructure/monitoring/**",
    "src/infrastructure/observability/**",
    "src/infrastructure/process/**",
    "src/infrastructure/repositories/**",
    "src/config/elasticsearch.config.ts",
    "src/config/security.config.ts",
    "src/shared/decorators/**",
    "src/shared/middlewares/jwt.middleware.ts",
    "src/shared/services/apiKey.service.ts",
    "src/shared/utils/UserRateLimiter.ts",
    "src/shared/utils/cache/**",
    "src/types/**"
  ]
}
