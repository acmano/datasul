{
  "name": "lor0138",
  "version": "1.0.0",
  "description": "Backend API para consulta de dados Datasul - Sistema lor0138",
  "repository": {
    "type": "git",
    "url": "https://github.com/acmano/lordtsapiBackend.git"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    "build": "tsc -p tsconfig.build.json || true && npm run build:copy-sql",
    "build:copy-sql": "find src -name '*.sql' | while read f; do target=\"${f#src/}\"; mkdir -p \"dist/$(dirname \"$target\")\"; cp \"$f\" \"dist/$target\"; done",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "npm run test:unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "test:mutation:quick": "stryker run --mutate 'src/api/lor0138/item/dadosCadastrais/informacoesGerais/validators/**/*.ts'",
    "test:mutation:incremental": "stryker run --incremental",
    "test:mutation:dry": "stryker run --dryRun",
    "test:mutation:html": "stryker run && open reports/mutation/mutation-report.html",
    "test:mutation:ci": "stryker run --concurrency 2",
    "mutation:report": "open reports/mutation/mutation-report.html",
    "mutation:clean": "rm -rf .stryker-tmp reports/mutation",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:unit:watch": "jest --testPathPattern=tests/unit --watch",
    "test:unit:coverage": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration --setupFilesAfterEnv='<rootDir>/tests/setup.integration.ts' --runInBand",
    "test:integration:watch": "NODE_ENV=test jest --testPathPattern=tests/integration --setupFilesAfterEnv='<rootDir>/tests/setup.integration.ts' --watch --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:e2e:watch": "jest --testPathPattern=tests/e2e --watch --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:coverage && npm run test:mutation",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:connections": "jest --testPathPattern=connections.health.test --runInBand --verbose",
    "test:connections:datasul": "./scripts/test-connections.sh datasul",
    "test:connections:informix": "./scripts/test-connections.sh informix",
    "test:connections:sqlserver": "./scripts/test-connections.sh sqlserver",
    "prepare": "husky install || true",
    "check:complexity": "npx ts-node scripts/check-complexity.ts",
    "check:all": "npm run lint && npm run format:check && npm run test:unit && npm run check:complexity"
  },
  "keywords": [
    "datasul",
    "erp",
    "backend",
    "api",
    "lor0138"
  ],
  "author": "acmano",
  "license": "ISC",
  "dependencies": {
    "@acmano/lordtsapi-shared-types": "^1.0.0",
    "@elastic/elasticsearch": "^8.11.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-jaeger": "^2.2.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@types/opossum": "^8.1.9",
    "adm-zip": "^0.5.16",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^14.0.2",
    "compression": "^1.8.1",
    "connect-timeout": "^1.9.1",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.1",
    "joi": "^18.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "module-alias": "^2.2.3",
    "mssql": "^12.0.0",
    "node-cache": "^5.1.2",
    "odbc": "^2.4.9",
    "opossum": "^9.0.0",
    "pdfkit": "^0.17.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-elasticsearch": "^0.11.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@stryker-mutator/core": "^9.2.0",
    "@stryker-mutator/html-reporter": "^3.1.0",
    "@stryker-mutator/jest-runner": "^9.2.0",
    "@stryker-mutator/typescript-checker": "^9.2.0",
    "@types/adm-zip": "^0.5.7",
    "@types/compression": "^1.8.1",
    "@types/connect-timeout": "^1.9.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.10",
    "@types/joi": "^17.2.2",
    "@types/mssql": "^9.1.4",
    "@types/node": "^20.10.0",
    "@types/node-cache": "^4.1.3",
    "@types/pdfkit": "^0.17.3",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "globby": "^15.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.3.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.45.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@api": "dist",
    "@shared": "dist/shared",
    "@config": "dist/config",
    "@infrastructure": "dist/infrastructure",
    "@produto": "dist/produto",
    "@item": "dist/item",
    "@familia": "dist/familia",
    "@grupoDeEstoque": "dist/grupoDeEstoque",
    "@familiaComercial": "dist/familiaComercial",
    "@estabelecimento": "dist/estabelecimento",
    "@engenharia": "dist/engenharia",
    "@pcp": "dist/pcp",
    "@manufatura": "dist/manufatura",
    "@fiscal": "dist/fiscal"
  }
}
